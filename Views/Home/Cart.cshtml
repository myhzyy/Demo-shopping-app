@model List<Customer>

<div class="container py-4 fw-bold">

    @foreach (var customer in Model)
    {
        <div class="border rounded shadow-sm mt-4 p-4 bg-light">

            <h2 class="text-primary">@customer.CustomerName</h2>

            @foreach (var order in customer.Orders)
            {
                <h4 class="mt-3">Order #@order.Id</h4>

                <ul class="list-group mb-3">
                    @foreach (var item in order.LineItems)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>@item.Product.ProductName</span>
                            <span class="badge bg-secondary">x @item.Quantity</span>

                                <form asp-controller="Cart" asp-action="RemoveItem">
                            <button name="orderLineItem" value="@item.Id" class="border rounded" type="submit">Remove</button>
                                </form>
                        </li>
                    }
                </ul>
            }

        </div>
    }

</div>
